<cu-custom model="nav" bindover="leaveover" bgColor="bg-red" isBack="{{true}}"><view slot="backText">返回</view><view slot="content">{{targetItem.name}}</view></cu-custom>
<swiper class="card-swiper square-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <swiper-item wx:for="{{swiperCard}}" wx:key="index" class="{{cardCur==index?'cur':''}}">
    <view class="swiper-item">
      <image src="{{targetItem.img}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
      <video src="{{targetItem.img}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
    </view>
  </swiper-item>
</swiper>
