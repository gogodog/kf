                </wux-swipe-action>
              </wux-cell-group>
            </view>
            </wux-step>
            <wux-step status="finish" title="做法">
              <view  slot="content" style="margin-top:60rpx" >
                <wux-cell-group>
                  <wux-cell hover-class="none"><wux-textarea autoHeight placeholder="请点击这里输入制作方法（建议每步使用换行隔开）"/></wux-cell>
                </wux-cell-group>
              </view>
            </wux-step>
            <wux-step status="finish" title="需要注意">
              <view  slot="content" style="margin-top:60rpx" >
                <wux-cell-group>
                  <wux-cell hover-class="none"><wux-textarea autoHeight placeholder="请点击这里输入需要注意的事项"/></wux-cell>
                </wux-cell-group>
              </view>
            </wux-step>
        </wux-steps>
        <wux-wing-blank size="large" body-style="margin-left: 50rpx; margin-right: 50rpx">
            <wux-button block outline type="positive" bind:click="submitPick">确认提交</wux-button>
        </wux-wing-blank>
        <wux-white-space body-style="height: 100rpx" />
</view>
