              <wux-cell-group>
                <wux-swipe-action autoClose right="{{ right }}">
                    <wux-cell title="盐" hover-class="none">
                      <wux-input-number default-value="30" min="{{ 1 }}" max="{{ 30 }}" longpress disabled="{{ false }}" slot="footer" />
                    </wux-cell>
                </wux-swipe-action>
                <wux-swipe-action autoClose right="{{ right }}">
