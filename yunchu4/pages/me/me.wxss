.wux-divider-bottom {
    display: block;
    height: 2rpx;
    margin: 30rpx 0;
    clear: both;
    border-top: 2rpx solid #e8e8e8;
  }
  .wux-divider-bottom--text {
    display: table;
    white-space: nowrap;
    text-align: center;
    background: 0 0;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.85);
    font-size: 32rpx;
    border-top: none !important;
    padding: 0 30%;
  }
  .wux-divider-bottom--text::after,
  .wux-divider-bottom--text::before {
    content: '';
    display: table-cell;
    position: relative;
    top: 50%;
    width: 50%;
    border-top-width: 2rpx;
    border-top-style: solid;
    border-top-color: #e8e8e8;
    transform: translateY(50%);
  }
  .wux-divider-bottom--dashed {
    border-top: 2rpx dashed #e8e8e8;
  }
  .wux-divider-bottom--dashed.wux-divider-bottom--text::after,
  .wux-divider-bottom--dashed.wux-divider-bottom--text::before {
    border-top-style: dashed;
  }
  .wux-divider-bottom--text-left::before {
    width: 5%;
  }
  .wux-divider-bottom--text-left::after {
    width: 95%;
  }
  .wux-divider-bottom--text-right::before {
    width: 95%;
  }
  .wux-divider-bottom--text-right::after {
    width: 5%;
  }
  .wux-divider-bottom__text {
    display: inline-block;
    padding: 0 30rpx;
    color: #e8b9e8;
  }



  .UCenter-bg {
