

<scroll-view scroll-y class="scrollPage">
  <view class="bg-red UCenter-bg " style="background-image:'url()'!important">
	<view class="cu-avatar xl round" style="background-image:url({{user.wx_head}});"></view>
    <view class="text-xl">{{user.wx_name}}</view>
    <image src="https://raw.githubusercontent.com/weilanwl/ColorUI/master/demo/images/wave.gif" mode="scaleToFill" class="gif-wave"></image>
  </view>
	<view class="cu-list grid col-4 no-border">
    <view class="cu-item" wx:for="{{iconList}}" wx:key="index"  data-goto="{{item.url}}" bindtap="gotoPage">
      <view class="cuIcon-{{item.icon}} text-{{item.color}}">
        <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
          <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
        </view>
      </view>
      <text>{{item.name}}</text>
    </view>
  </view>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" bindtap="CopyLink" data-link="https://github.com/weilanwl/ColorUI">
        <text class="cuIcon-github text-grey"></text>
        <text class="text-grey">我的地址</text>
      </view>
    </view>
	<view class="cu-item arrow">
      <navigator class="content" url="/pages/cookbooklist/cookbooklist" hover-class="none">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">红包</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/kefu/kefu" hover-class="none">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">客服中心</text>
      </navigator>
    </view>
	<view class="cu-item arrow">
      <navigator class="content" url="/pages/about/log/log" hover-class="none">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">帮助和反馈</text>
      </navigator>
    </view>
	<view class="cu-item arrow">
      <navigator class="content" url="/pages/about/log/log" hover-class="none">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">餐饮加盟</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/about/test/list" hover-class="none">
        <text class="cuIcon-creativefill text-orange"></text>
        <text class="text-grey">云厨公告</text>
      </navigator>
    </view>
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>
<footnav tabCur="{{4}}"></footnav>