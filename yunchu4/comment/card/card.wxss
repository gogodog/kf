/* dist/cards/card/card.wxss */
.wx-cards-card {
  margin: 24rpx;
  background-color: #fff;
  border-radius: 6rpx;
  box-shadow: 0px 1px 3px 0px rgba(0,0,0,0.2), 0px 1px 1px 0px rgba(0,0,0,0.14), 0px 2px 1px -1px rgba(0,0,0,0.12);
  overflow: hidden;
}

.wx-cards-card .header {
  display: flex;
  justify-content: space-between;
  padding: 16rpx;
  align-items: center;
}

.wx-cards-card .header .pc {
  flex: 0 0 auto;
  margin-right: 16px;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  position: relative;
  overflow: hidden;
  font-size: 1.25rem;
  flex-shrink: 0;
  font-family: "Roboto", "Helvetica", "Arial", sans-serif;
  align-items: center;
  user-select: none;
  border-radius: 50%;
  justify-content: center;
}

.wx-cards-card .header .pc image {
  width: 100%;
  height: 100%;
}

.wx-cards-card .header .title-time {
  flex: 1 1 auto;
}

.wx-cards-card .header .title {
  margin: 0;
  display: block;
  color: rgba(0, 0, 0, 0.87);
  font-size: 28rpx;
  font-family: "Roboto", "Helvetica", "Arial", sans-serif;
  font-weight: 400;
  line-height: 1.5;
  letter-spacing: 0.01071em;
}

.wx-cards-card .header .time {
  color: rgba(0, 0, 0, 0.54);
  font-size: 28rpx;
  font-family: "Roboto", "Helvetica", "Arial", sans-serif;
  font-weight: 400;
  line-height: 1.5;
  letter-spacing: 0.01071em;
  margin: 0;
  display: block;
}

.wx-cards-card .img image {
  width: 100%;
}

.wx-cards-card .text {
  padding: 16rpx;
  color: rgba(0, 0, 0, 0.87);
  font-size: 28rpx;
  font-family: "Roboto", "Helvetica", "Arial", sans-serif;
  font-weight: 400;
  line-height: 1.5;
  letter-spacing: 0.01071em;
}

.wx-cards-card .buttons {
  display: flex;
  justify-content: space-between;
  padding-left: 8rpx;
  padding-right: 8rpx;
}

.wx-cards-card .buttons .number {
  align-items:center;
  margin-left: -10rpx;
  /****/
  padding-top: 16rpx;
  font-size: 28rpx;
  line-height: 78rpx;
  color: #6b6b6b;
}

.wx-cards-card .more-text {
  height: 0;
  overflow: visible;
  padding: 0;
  transition-duration: 370ms;
  transition: height 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  display: block;
}

.wx-cards-card .explain-text {
  height: auto;
  padding: 16rpx;
}

.wx-cards-card .more-text text {
  color: rgba(0, 0, 0, 0.87);
  font-size: 28rpx;
  font-family: "Roboto", "Helvetica", "Arial", sans-serif;
  font-weight: 400;
  line-height: 1.5;
  letter-spacing: 0.01071em;
}

.wx-cards-card .tag {
  margin: 20rpx 0;
  padding: 8rpx;
}
